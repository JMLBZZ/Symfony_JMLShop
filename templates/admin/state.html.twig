{% if field.value == 1 %}
    <span class="badge rounded-pill text-bg-warning p-1">En attente de paiement</span>
{% elseif field.value == 2 %}
    <span class="badge rounded-pill text-bg-success p-1">Payée</span>
{% elseif field.value == 3 %}    
    <span class="badge rounded-pill text-bg-secondary p-1">En Préparation</span>
{% elseif field.value == 4 %}    
    <span class="badge rounded-pill text-bg-primary p-1">Expédiée</span>
{% elseif field.value == 5 %}    
    <span class="badge rounded-pill text-bg-danger p-1">Annulée</span>
{% endif %}