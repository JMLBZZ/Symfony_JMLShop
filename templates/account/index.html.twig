{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">

        <h1 class="mb-5">
            Espace de
            {{ app.user.lastname }}
        </h1>

        {# colonnes en 3/9 #}

        <div class="row">

            {# colonne des liens #}
            <div class="col-md-3">
                {% include ("account/menu.html.twig") %}
            </div>

            

            {# colonne des contenus #}
            <div class="col-md-9">
                {# {{ dump(orders) }} #}
                {% if orders|length == 0 %}
                    <div class="alert alert-secondary">
                        Aucune commande.
                    </div>
                    {% else %}
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">N°</th>
                                <th scope="col">Date</th>
                                <th scope="col">Statut</th>
                                <th scope="col" class="text-end">Total T.T.C.</th>
                                <th scope="col" class="text-end">Détail</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            {% for order in orders %}
                                <tr class="align-middle">
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.createdAt|date("d/m/Y")}}</td>
                                    <th>{{ include("admin/state.html.twig", {field : { value : order.state }} ) }}</th>
                                    <td class="text-end">{{ order.totalTva|pricefilter }}</td>
                                    <td class="text-end">
                                        <a href="{{ path ("app_account_order", {"id_order" : order.id }) }}" class="btn btn-dark">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

        </div>

    </div>
{% endblock %}
